<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".KasamaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kasama"
        tools:targetApi="34">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Kasama">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChoreActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Kasama">
        </activity>
        <activity
            android:name=".DashboardActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Kasama">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".SignupActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".LoginActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".ProfileSetupActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".HouseholdSetupActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".CreateHouseholdActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".InviteActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".JoinActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".JoinConfirmActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".MenuActivity" android:theme="@style/Theme.Kasama" />
        <activity android:name=".SettingsActivity" android:theme="@style/Theme.Kasama" />

        <activity
            android:name=".NoteActivity"
            android:theme="@style/Theme.Kasama"
            android:windowSoftInputMode="adjustResize"
            />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".notifications.KasamaFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Notification metadata for default icon and color -->
        <!-- TODO: Configure if needed -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/kasama_profile_default" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primary_color" />
    </application>

</manifest>