<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_dashboard_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Dashboard"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="@+id/text_dashboard_header"
        app:layout_constraintTop_toBottomOf="@+id/text_dashboard_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="184dp"
            android:layout_height="202dp"
            android:padding="12dp"
            android:background="@drawable/border" >

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgress"
                android:layout_width="118dp"
                android:layout_height="119dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:indeterminate="false"
                app:indicatorColor="#32AAAF"
                app:indicatorInset="0dp"
                app:indicatorSize="140dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="#DDDDDD"
                app:trackThickness="15dp" />

            <TextView
                android:id="@+id/dashboard_percent_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="You have completed 64% of your chores!"
                android:textColor="#100202"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/circularProgress" />

            <TextView
                android:id="@+id/percentage_dashboard_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="64%"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/circularProgress"
                app:layout_constraintEnd_toEndOf="@+id/circularProgress"
                app:layout_constraintStart_toStartOf="@+id/circularProgress"
                app:layout_constraintTop_toTopOf="@+id/circularProgress" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="181dp"
        android:layout_height="140dp"
        android:background="#32AAAF"
        app:layout_constraintEnd_toEndOf="@+id/dashboardHousemateRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView">

        <TextView
            android:id="@+id/text_housemate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Housemate"
            android:textColor="#FDFDFD"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_productivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="has been super productive!"
            android:textColor="#FDFDFD"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productive_housemate_name" />

        <ImageView
            android:id="@+id/productive_housemate_pfp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/productive_housemate_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/productive_housemate_name"
            app:srcCompat="@drawable/kasama_profile_default" />

        <TextView
            android:id="@+id/productive_housemate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Hep"
            android:textColor="#F8F8F8"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_housemate" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/recent_notes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="4"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="New notes have been added recently"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/recent_notes_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recent_notes_count"
            app:layout_constraintTop_toTopOf="@+id/recent_notes_count" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <View
            android:id="@+id/bottom_border_chores"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@drawable/bottom_border_rounded_black"
            app:layout_constraintEnd_toEndOf="@+id/text_option_chores"
            app:layout_constraintStart_toStartOf="@+id/text_option_chores"
            app:layout_constraintTop_toBottomOf="@+id/text_option_chores" />

        <View
            android:id="@+id/bottom_border_notes"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/bottom_border_rounded_black"
            app:layout_constraintEnd_toEndOf="@+id/text_option_notes"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text_option_notes"
            app:layout_constraintTop_toBottomOf="@+id/text_option_notes" />

        <View
            android:id="@+id/bottom_border_housemates"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/bottom_border_rounded_black"
            app:layout_constraintEnd_toEndOf="@+id/text_option_housemates"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="@+id/text_option_housemates"
            app:layout_constraintTop_toBottomOf="@+id/text_option_housemates" />

        <TextView
            android:id="@+id/text_option_housemates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans_bold"
            android:text="Housemates"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_option_notes"
            app:layout_constraintStart_toEndOf="@+id/text_option_notes"
            app:layout_constraintTop_toTopOf="@+id/text_option_notes" />

        <TextView
            android:id="@+id/text_option_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans_bold"
            android:text="Notes"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_option_chores"
            app:layout_constraintStart_toEndOf="@+id/text_option_chores"
            app:layout_constraintTop_toTopOf="@+id/text_option_chores" />

        <TextView
            android:id="@+id/text_option_chores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans_bold"
            android:text="Chores"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_new_chore"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_button_primary"
        android:fontFamily="@font/open_sans_bold"
        android:text="New Chore"
        android:textColor="#F8F8F8"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <Button
        android:id="@+id/button_new_note"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_button_primary"
        android:fontFamily="@font/open_sans_bold"
        android:text="New Note"
        android:textColor="#F8F8F8"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <TextView
        android:id="@+id/button_view_all_chores"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/open_sans"
        android:text="View All Chores"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button_new_chore"
        app:layout_constraintTop_toBottomOf="@+id/button_new_chore" />

    <TextView
        android:id="@+id/button_view_all_notes"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/open_sans"
        android:text="View All Notes"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button_new_note"
        app:layout_constraintTop_toBottomOf="@+id/button_new_note" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboardChoreRecyclerView"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_view_all_chores" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboardHousemateRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>