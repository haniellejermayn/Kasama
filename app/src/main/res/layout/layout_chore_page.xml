<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFEFF">

    <TextView
        android:id="@+id/text_chore_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="All Chores"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_chore_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans"
        android:text="Today"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text_chore_header"
        app:layout_constraintTop_toBottomOf="@+id/text_chore_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filter_tabs_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button_primary"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_chore_date">

        <TextView
            android:id="@+id/text_option_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans_bold"
            android:padding="8dp"
            android:text="Today"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottom_border_today"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/text_option_today"
            app:layout_constraintStart_toStartOf="@+id/text_option_today"
            app:layout_constraintTop_toBottomOf="@+id/text_option_today" />

        <TextView
            android:id="@+id/text_option_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans_bold"
            android:padding="8dp"
            android:text="Week"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_option_today"
            app:layout_constraintStart_toEndOf="@+id/text_option_today"
            app:layout_constraintTop_toTopOf="@+id/text_option_today" />

        <View
            android:id="@+id/bottom_border_week"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/text_option_week"
            app:layout_constraintStart_toStartOf="@+id/text_option_week"
            app:layout_constraintTop_toBottomOf="@+id/text_option_week" />

        <TextView
            android:id="@+id/text_option_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans_bold"
            android:padding="8dp"
            android:text="Month"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_option_week"
            app:layout_constraintStart_toEndOf="@+id/text_option_week"
            app:layout_constraintTop_toTopOf="@+id/text_option_week" />

        <View
            android:id="@+id/bottom_border_month"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/text_option_month"
            app:layout_constraintStart_toStartOf="@+id/text_option_month"
            app:layout_constraintTop_toBottomOf="@+id/text_option_month" />

        <TextView
            android:id="@+id/text_option_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/open_sans_bold"
            android:padding="8dp"
            android:text="All"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_option_month"
            app:layout_constraintStart_toEndOf="@+id/text_option_month"
            app:layout_constraintTop_toTopOf="@+id/text_option_month" />

        <View
            android:id="@+id/bottom_border_all"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/text_option_all"
            app:layout_constraintStart_toStartOf="@+id/text_option_all"
            app:layout_constraintTop_toBottomOf="@+id/text_option_all" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shadow_background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_tabs_container">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/primary_color"
            app:layout_constraintEnd_toStartOf="@+id/progress_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/progress_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="0 / 0"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/progressBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choreRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_container" />

</androidx.constraintlayout.widget.ConstraintLayout>